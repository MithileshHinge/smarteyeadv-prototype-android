<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/xIVLogImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@color/colorPrimary"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/xLogName"
        android:text="Suspicious Activity"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/xIVLogImg"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/xLogTime"
        android:text="19:56:12"
        android:textSize="14sp"
        android:layout_below="@+id/xLogName"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@+id/xIVLogImg"
        />
    <ToggleButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:shape = "oval"
        android:background="@null"
        android:button="@drawable/star"
        android:textOn="@null"
        android:textOff="@null"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/xActivityLogBkrmrk"
        android:minWidth="0dp"
        android:minHeight="0dp"

        />


</RelativeLayout>